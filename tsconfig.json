{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true, // Next.js handles build output
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "bundler", // for Next.js
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"], // frontend imports
      "@server/*": ["server/src/*"], // backend imports
      "@shared/*": ["shared/*"] // shared types/helpers
    }
  },
  "include": [
    "next-env.d.ts",
    "client/src/**/*.ts",
    "client/src/**/*.tsx",
    "server/src/**/*.ts",
    "shared/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
